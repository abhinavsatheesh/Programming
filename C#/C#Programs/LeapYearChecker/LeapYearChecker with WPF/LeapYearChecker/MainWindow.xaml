<Window x:Class="LeapYearChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapYearChecker"
        mc:Ignorable="d"
        Title="Leap Year Checker" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="345,10,0,0" TextWrapping="Wrap" Text="Leap Year Checker" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="237,47,0,0" TextWrapping="Wrap" Text="Enter an year" VerticalAlignment="Top" Height="19"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="329,93,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="16" TextChanged="TextBox1_TextChanged" KeyDown="OnKeyDownHandler"/>

    </Grid>
</Window>
